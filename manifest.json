{
  "manifest_version": 3,
  "name": "Lite Chrome App Launcher",
  "version": "4.0",
  "description": "The Lite version Of Chrome App Launcher",

  "permissions": [
    "sidePanel"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "index.html",
    "default_title": "Open Launcher"
  },

  "side_panel": {
    "default_path": "index.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}